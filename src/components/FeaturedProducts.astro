---
interface Product {
  id: string;
  title: string;
  description: string;
  image: string;
  rating: number;
  category: string;
}

const featuredProducts: Product[] = [
  {
    id: '1',
    title: 'Premium Wireless Headphones',
    description: 'Experience crystal clear audio with our top-rated wireless headphones.',
    image: '/images/headphones.jpg',
    rating: 4.5,
    category: 'audio'
  },
  {
    id: '2',
    title: 'Ultra-slim Gaming Laptop',
    description: 'Power and portability combined in this cutting-edge gaming laptop.',
    image: '/images/laptop.jpg',
    rating: 4.8,
    category: 'computers'
  },
  {
    id: '3',
    title: 'Smart Home Hub',
    description: 'Control your entire home with this intuitive smart home hub.',
    image: '/images/smart-hub.jpg',
    rating: 4.3,
    category: 'home-automation'
  }
];
---

<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-8">Featured Products</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredProducts.map(product => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img src={product.image} alt={product.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900">{product.title}</h3>
            <p class="mt-2 text-gray-600">{product.description}</p>
            <div class="mt-4 flex items-center">
              <div class="flex items-center">
                {[...Array(5)].map((_, i) => (
                  <svg
                    class={`h-5 w-5 ${i < product.rating ? 'text-yellow-400' : 'text-gray-300'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="ml-2 text-sm text-gray-600">({product.rating})</span>
            </div>
            <a
              href={`/product/${product.id}`}
              class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700"
            >
              Read Review
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>